@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Art of Thomas C. Linton</title>
    <meta name="viewport" content="width=device-width" />

    <style type="text/css">
        .img1 
        {
            height: 100px;
            border: 50px;
            background: #fff;
            padding: 10px;
        }  
        .style1
        {
            font-family: "Courier New";
            font-size: xx-small;
        }
        a:link, a:visited
        {
            text-decoration: none;
        }
        .style2 
        {
            cursor:move;
        }
        #links
        {
            position:absolute;
            bottom: 50px;
        }
    </style>

</head>
<body>
    <div>
        @{
            String[] filenames = (String[])ViewData["Filenames"];
            int start = Convert.ToInt32(ViewData["Start"]);
            int picPerPage = Convert.ToInt32(ViewData["ThumbnailsPerPage"]);
            int end = start + picPerPage;
            if (end>filenames.Length)
            {
                end = filenames.Length;
            }
            for (int i=start;i<end;i++)
            {
                String url = String.Format("../../Pictures/{0}", filenames[i]);
                String url1 = @Url.Action("Picture", "Default", new { id =i });
                String url2 = @Url.Content(url);
            
                <a href="@url1">
                    <img class="img1" alt="Image1" id="Image1" src="@url2"  />
                </a>
            }
        }
        <div id="links">
            @Html.ActionLink("Next","Next")
            @Html.ActionLink("Previous","Previous")

            <div class="style1">Copyright Thomas C. Linton</div>
        </div>
    </div>
</body>
</html>
